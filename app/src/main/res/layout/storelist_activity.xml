<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/layout_first"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_weight="1"
        android:background="@drawable/custom_header_color"
        android:gravity="center_vertical" >
        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:src="@drawable/ic_back"


            android:textSize="15sp" />
        <TextView
            android:id="@+id/butn_refresh_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/menu_icon"
            android:text="Store List"
            android:textColor="#ffffff"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/logoutIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@+id/butn_refresh_data"
            android:src="@drawable/logout_new"
            android:visibility="gone"
            />



    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_DoName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        android:orientation="horizontal">


        <TextView
            android:id="@+id/txtDBName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:padding="3dp"
            android:layout_marginRight="10dp"
            android:text="Route"
            android:textColor="#9f7606"
            android:textSize="14sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/sp_Route"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/spinner_boundary"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="All"></TextView>


    </LinearLayout>

    <EditText
        android:id="@+id/ed_search"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="33dp"
        android:hint="Search Store"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="1dp"
        android:layout_marginLeft="15dp"
        android:drawablePadding="2dp"
        android:textSize="13sp"
        android:background="@drawable/search_background"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 -,()/*."
        android:drawableRight="@drawable/search_icon"
        android:layout_marginRight="15dp"/>


    <LinearLayout android:layout_width="match_parent"

        android:layout_weight="10"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/center_boundary"
        android:layout_height="0dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:id="@+id/parentOfAllDynamicData">


            </LinearLayout>
        </ScrollView>

