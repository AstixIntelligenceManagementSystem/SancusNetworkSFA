<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#80c55901"
                android:endColor="#80c55901"
                android:angle="270"

                />
            <stroke
                android:width="1dp"
                android:color="#80c55901"
                />
            <corners
                android:radius="1dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#e77c1d"
                android:startColor="#e77c1d"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#e77c1d" />
            <corners
                android:radius="1dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#e77c1d"
                android:startColor="#e77c1d"
                android:angle="270" />
            <corners android:radius="1dp"/>
            <stroke
                android:width="0.5dp"
                android:color="#e77c1d"/>
        </shape>
    </item>
</selector>